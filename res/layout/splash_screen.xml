<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="854px"
    
    >
      
    <!-- Background android:onClick ="OnBackgroundClick" Image-->
    
	<!-- ***************************************************** -->
    <!-- ****************** LoadingCScreen******************** -->
    <!-- ***************************************************** -->
    <RelativeLayout  
    android:id="@+id/LoadingCScreen"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	>			
	
   <ImageView
       android:id="@+id/intro_background_static"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
        
       android:layout_alignParentTop="true"
       android:contentDescription="@string/empty"
       android:src="@drawable/heart_background_static" />

    </RelativeLayout> <!-- End of LoadingCScreen -->
   <!--  
     <VideoView 
        android:id="@+id/surface_view" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
    />     
     -->
      <!-- ***************************************************** -->
    <!-- ****************** LoadingAScreen******************** -->
    <!-- ***************************************************** -->
    <RelativeLayout
    android:id="@+id/LoadingAScreen"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:layout_marginTop="430dp"
	android:layout_centerHorizontal="true"
    >
    <com.himumsaiddad.niggle.intro.ProgressBarImageView
    android:id="@+id/prog_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:src="@drawable/loading_bar_back" 
    />   
    <ImageView  android:id="@+id/prog_bar_top"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"  
 	android:layout_marginTop="43dp"
 	android:contentDescription ="@string/empty"    
    android:src="@drawable/loading_bar_top" 
    />   
    </RelativeLayout> <!-- End of LoadingAScreen -->
    
    
    <!-- ***************************************************** -->
    <!-- *******************MenuScreen *********************** -->
    <!-- ***************************************************** -->
    <RelativeLayout
    android:id="@+id/MenuScreen"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:layout_marginTop="-10dp"
    > 
    <!-- HowToNiggle  Button-->	<ImageButton
    android:id="@+id/how_to_niggle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="290dp"
    android:contentDescription ="@string/empty"
    android:src="@drawable/how_to_niggle_s" />
	<!-- GoNiggle  Button-->
    <ImageButton
    android:id="@+id/nail_that_niggle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="350dp"
    android:contentDescription ="@string/empty"
    android:src="@drawable/nail_that_niggle_s" />
    <!-- MySavedNiggles  Button-->
    <ImageButton
    android:id="@+id/nailed_niggles"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="410dp"
    android:contentDescription ="@string/empty"
    android:src="@drawable/nailed_niggles_s" />
    <!-- FacebookShare  Button-->
    <ImageButton
    android:id="@+id/facebook"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginTop="480dp"
    android:contentDescription ="@string/empty"   
    android:src="@drawable/facebook_s" />
    <!-- Twitter Button -->
    <ImageButton
    android:id="@+id/twitter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="480dp"
    android:contentDescription ="@string/empty"   
    android:src="@drawable/twitter_s" />
   
    <!-- text_menu_layout -->
    <RelativeLayout
    android:id="@+id/text_menu_layout"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:layout_centerHorizontal="true"
	android:layout_marginTop="175dp"
	android:background = "@drawable/text_box_1" 
    >
  
    <TextView
    android:id="@+id/text_menu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:text="@string/text_menu"
    >
    
    </TextView>
    </RelativeLayout><!-- End of text_menu_layout -->
    
   </RelativeLayout> <!-- End of MenuScreen -->
   
	<!-- ***************************************************** -->
    <!-- ****************** LoadingBScreen******************** -->
    <!-- ***************************************************** -->
    <RelativeLayout
    android:id="@+id/LoadingBScreen"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:layout_centerHorizontal="true"
	android:layout_marginTop="175dp"
	android:background = "@drawable/text_box" 
    > 
  
    <TextView
    android:id="@+id/text_loading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"  
    android:layout_centerInParent="true"
  	android:text="@string/text_loading"
    >
    </TextView>
    
    </RelativeLayout> <!-- End of LoadingBScreen -->
    
      
    <!-- ***************************************************** -->
    <!-- ****************** LogoScreen *********************** -->
    <!-- ***************************************************** -->
    <RelativeLayout 
    android:id="@+id/LogoScreen"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	 android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="0dp"
    >		
	<ImageView
    android:id="@+id/logo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"  
    android:contentDescription ="@string/empty"
    android:src="@drawable/logo" />			
      
    </RelativeLayout> <!-- End of LogoScreen --> 
       
    </RelativeLayout> <!-- End of Splash Activity's View -->