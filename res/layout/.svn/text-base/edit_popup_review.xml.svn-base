<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_popup_review"
    android:layout_width="fill_parent"
    android:background="#00000000"
    android:layout_gravity="bottom"
    android:layout_height="854px"
    >
    
    
   <RelativeLayout
	android:id="@+id/input_review_popup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_marginTop = "130dp"
   >
   
    <RelativeLayout
    android:id="@+id/text_title_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:background="@drawable/text_box_1"
    android:layout_marginTop="0dp"
    >
	<TextView
    android:id="@+id/title_text_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#ffffff"
    android:textSize = "22sp"
     android:layout_centerHorizontal= "true"
    android:text = "@string/review_title"
    android:padding="10dp"
   />  
   
    <TextView
    android:id="@+id/title_text_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#ffffff"
    android:textSize = "16sp"
    android:gravity = "center"
    android:text = "@string/review_body"
    android:layout_centerHorizontal= "true"
    android:layout_marginTop = "30dp"
    android:padding="10dp"
   />          
    </RelativeLayout>
    
    <RelativeLayout
    android:id="@+id/what_i_now_know_layout"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal= "true"
    android:layout_marginTop="130dp"
	android:background="@drawable/background_text_bar"
    >     
    <TextView
    android:id="@+id/what_i_now_know_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#ffffff"
    android:textSize = "20sp"
    android:gravity = "center"
    android:text = "@string/review_what_i_now_know"
    android:layout_alignParentLeft= "true"
    android:padding="10dp"
   />      
   
    </RelativeLayout>
      
    <RelativeLayout
    android:id="@+id/edit_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal= "true"	
 	 android:layout_marginTop="240dp"
	android:background="@drawable/background_text_bar"
    >     
    <TextView
    android:id="@+id/what_i_ll_now_do_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#ffffff"
    android:textSize = "20sp"
    android:gravity = "center"
    android:text = "@string/review_what_i_ll_now_do"
    android:layout_alignParentLeft= "true"
    android:padding="10dp"
   /> 
   
     </RelativeLayout>
    </RelativeLayout>
 
	<LinearLayout
	android:id="@+id/edit_frame_1"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	 android:layout_marginTop="470px"
	>
	
	<EditText
	android:id="@+id/edit_text_1"
	android:layout_width="445px"
	android:layout_height="62px"
	android:textColor="#000000"
	android:textSize = "20sp"
	android:text = "@string/text_input_1"
	 android:layout_marginLeft="10dp"
	android:background = "@drawable/text_input_bar" 
	
	 />  
	 
	<EditText
	android:id="@+id/edit_text_2"
	android:layout_width="445px"
	android:layout_height="62px"
	android:textColor="#000000"
	android:textSize = "20sp"
	android:text = "@string/text_input_1"
	android:layout_marginTop="70dp"
	android:layout_marginLeft="10dp"
	android:background = "@drawable/text_input_bar"
	
	 />  
	
	</LinearLayout>

	<RelativeLayout  
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    >                      
    <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_centerHorizontal= "true"
    >
    <ImageButton
    android:id="@+id/save"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick ="OnSaveClick"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:src="@drawable/save_s" />  
    
	<ImageButton
    android:id="@+id/no_thanks"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick ="OnNoThanksClick"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:src="@drawable/no_thanks_s" />  
    </LinearLayout>
    
    </RelativeLayout> 
</RelativeLayout>